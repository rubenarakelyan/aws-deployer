<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
    <title><%= t("app_name") %></title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/"><%= t("app_name") %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="<%= t("nav.toggle_navigation") %>">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/"><%= t("nav.home") %> <span class="sr-only">(<%= t("nav.current") %>)</span></a>
          </li>
        </ul>
      </div>
      <% if current_user %>
      <span class="navbar-text"><%= current_user.name %>&nbsp;&nbsp;</span>
      <%= link_to t("auth.log_out"), "/auth/logout", method: :delete, class: "btn btn-outline-success" %>
      <% else %>
      <%= link_to t("auth.log_in"), "/auth/githubteammember", method: :post, class: "btn btn-outline-success" %>
      <% end %>
    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
    <% if notice %>
    <div class="toast general-toast" data-delay="5000">
      <div class="toast-header">
        <strong class="mr-auto"><%= t("app_name") %></strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="<%= t("toast.close") %>">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        <%= notice %>
      </div>
    </div>
    <% end %>
  </body>
</html>
